<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="goods">
	<sql id="search">
		SELECT * FROM goods ORDER BY goodsid	
	</sql>
	
<!-- 	<select id="total" resultType="Integer"> -->
<!-- 		SELECT COUNT(*) FROM  -->
<!-- 			(<include refid="search"></include>) sub -->
<!-- 	</select> -->
	
	<select id="list" resultType="Goods">
		SELECT * FROM   			
    		(<include refid="search"></include>) sub
<!--     	LIMIT #{offset}, #{perPage} -->
	</select>
	
	<insert id="add">
		INSERT INTO goods
		VALUES (#{goodsid}, #{goodsname}, #{kind}, #{price})
	</insert>
	
	<delete id="delete">
		DELETE FROM goods
		WHERE bookid=#{goodsid}
	</delete>
	
	<update id="update">
		UPDATE goods
		SET goodsname=#{goodsname}, kind=#{kind}, price=#{price}
		WHERE bookid=#{bookid}
	</update>
	
	<select id="item" resultType="Goods">
		SELECT * FROM goods
		WHERE goodsid=#{goddsid}
	</select>
</mapper>